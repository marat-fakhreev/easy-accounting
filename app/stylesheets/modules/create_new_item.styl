.circle
  width: 6rem
  height: 6rem
  overflow: hidden
  box-sizing: border-box
  border-radius: 50%
  border: 2px solid $borderColor
  transform: scale(1)
  transition: all 0.1s ease
  position: relative
  z-index: 10
  center(6rem)

  &:after
    content: ''
    position: absolute
    z-index: 10
    width: 100%
    height: 100%
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color: rgba(#fff, 0.4)
    border-radius: 50%
    box-shadow: inset 1px 1px 3px 3px #ccc

  &:active
    transform: scale(1.2)
    transition: all 0.1s ease
    border: 2px solid $blueColor

  &.active
    border: 2px solid $blueColor

  &.integer
  &.string
    text-align: center
    line-height: 6rem

  &.integer
    .topcoat-text-input
      padding: 0 0 0 2.2rem

  &.string
    .topcoat-text-input
      padding: 0 0 0 0.7rem

    span
      font-size: 20px

  .topcoat-switch
  .topcoat-text-input
    position: relative
    top: 1.5rem
    margin: 0

  .topcoat-text-input
    padding: 0 0 0 1rem
    font-size: 18px

  span
    color: $blueColor
    font-size: 36px

.create-new-item-region
.edit-item-region
  clearfix()
  background-color: $bgDarkGreyColor
  borderBottomRadius()

  .add-item-box
    padding: 1.25rem 0

  .row
    clearfix()
    padding: 0 1.25rem
    min-height: 3rem
    line-height: 1.4
    text-align: left

  .desc
    col(4/10)
    padding: 5px 0 0 0

    .desc-name
      line-height: 3rem

    .desc-types
      position: relative
      top: 2rem

  .types
    col(6/10)

    .item-name-input
      // border: 1px solid #777

    .circles-box
      clearfix()
      padding: 1.25rem 0

    .circle-wrapper
      col(1/3)

  .submit-button
    width: 100%
