.f-icon
  width: 3rem
  float: right
  background-color: rgba($blueColor, 0.7)
  border-top-right-radius: 6px

  &::before
  &::after
    content: inherit
    line-height: 2
    font-size: 24px
    color: $whiteColor

  &:active
    background-color: $blueColor

.create-item
  overflow: hidden

  .text-box
    clearfix()
    border: 1px solid $borderColor
    margin: 0 0 10px 0
    padding: 0

    &.active
      .f-icon
        border-bottom-right-radius: 0px

  .title
    center(100%)

  .add-item-inner
    clearfix()
    border-bottom: 1px solid $borderColor


.create-template-list
  .topcoat-list__item
    clearfix()
    overflow: hidden
    position: relative
    padding: 0
    height: 4rem

    .circle
      position: relative
      transform: scale(0.5)
      top: -1.1rem
      left: -1rem
      overflow: hidden

      &:active
        transform: scale(0.5)

    .type
      col(2/10)

    .name
      col(5/10)
      height: 4rem
      line-height: 4rem
      position: relative
      left: -2.5rem

    .f-icon
      width: 4rem
      height: 4rem
      border-radius: 0px
      text-align: center

      &.fa-times
        background-color: rgba($redColor, 0.7)

        &:active
        &.active
          background-color: $redColor

      &.fa-pencil-square-o
        &::before
        &::after
          line-height: 4.2rem

      &::before
      &::after
        font-size: 26px
        line-height: 4rem
