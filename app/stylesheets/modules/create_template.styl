.f-icon
  width: 3rem
  float: right
  background-color: rgba($blueColor, 0.7)
  border-top-right-radius: 6px

  &::before
  &::after
    content: inherit
    line-height: 2
    font-size: 24px
    color: $whiteColor

  &:active
    background-color: $blueColor

.create-item
  overflow: hidden

  .text-box
    clearfix()
    border: 1px solid $borderColor
    margin: 0 0 10px 0
    padding: 0

    &.active
      .f-icon
        border-bottom-right-radius: 0px

  .add-item-inner
    clearfix()
    border-bottom: 1px solid $borderColor

  .title
    center(100%)

.create-template-list
  scrollBox()
  top: 22rem

  .f-icon
    width: 4rem
    height: 4rem
    border-radius: 0px
    text-align: center

    &.fa-times
      background-color: rgba($redColor, 0.7)

      &:active
      &.active
        background-color: $redColor

    &.fa-pencil-square-o
      &::before
      &::after
        line-height: 4.2rem

    &::before
    &::after
      font-size: 26px
      line-height: 4rem

  .topcoat-list__item
    clearfix()
    overflow: hidden
    position: relative
    padding: 0

    .item-inner
      height: 4rem
      overflow: hidden
      clearfix()

      .circle-wrapper
        position: relative
        transform: scale(0.5)
        top: -1.1rem
        left: -1rem
        z-index: 0

      .circle
        overflow: hidden
        z-index: 0

        &:active
          transform: scale(0.5)

      .item-type
        col(2/10)

      .item-name
        col(5/10)
        height: 4rem
        line-height: 4rem
        position: relative
        left: -2.5rem

  .create-item
    margin: 0
    display: none

    .text-box
      border: none
      border-top: 1px solid $borderColor
      border-radius: 0

    .item-form-region
      border-radius: 0

    .item-form-region
      background-color: transparent
