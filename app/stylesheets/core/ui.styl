.spinner
  background-color: transparent
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0
  background-color: rgba(#000, 0.5)
  z-index: 10000

.text-box
  background-color: $itemGreyColor
  box-sizing: border-box
  padding: 0 1.25rem
  line-height: 3rem
  text-align: center
  color: $fontColor
  border-radius: 6px

.clear-field
  position: absolute
  right: 15px
  top: 50%
  margin-top: -19px
  font-size: 30px
  color: $borderColor
  z-index: 50

.datetime-box
  height: 3rem
  line-height: 3rem
  font-size: 16px
  letter-spacing: 1px
  padding: 0 1.25rem
  border: 1px solid #9daca9
  border-radius: 6px
  background-color: #fff
  box-shadow: inset 0 1px rgba(0, 0, 0, 0.1)
  color: #454545
  vertical-align: top
  margin: 5px 0 5px 0

  &:active
    border: 1px solid $blueColor
